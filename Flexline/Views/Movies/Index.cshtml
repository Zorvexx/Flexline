@model Flexline.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Filme";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Neuen Film erstellen", "Create")
</p>

<div>
    @using(Html.BeginForm("", "Movies"))
    {
        @Html.EditorFor(m => m.SearchString)
        <button type="submit">Suchen</button>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col" colspan="2">@Html.DisplayNameFor(model => model.Movies.FirstOrDefault().Name)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Bearbeiten", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
